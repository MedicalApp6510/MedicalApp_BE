<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:background="#FFC107"
    tools:context=".final_edit_profile">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="300dp"
        android:layout_height="549dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.559">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/final_edit_profile_first_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="FIRST NAME"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/final_edit_profile_first_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:textColor="#FFC107"
                android:textColorHighlight="#FFC107"
                android:textColorHint="@color/purple_200" />

            <TextView
                android:id="@+id/final_edit_profile_last_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="LAST NAME"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/final_edit_profile_last_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textColorHighlight="#FFC107"
                android:textColorHint="@color/purple_200" />

            <TextView
                android:id="@+id/final_edit_profile_email_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="EMAIL"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/final_edit_profile_email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:inputType="textEmailAddress"
                android:textColor="#FFC107"
                android:textColorHighlight="#FFC107"
                android:textColorHint="@color/purple_200" />

            <TextView
                android:id="@+id/final_edit_profile_username_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="USER NAME"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/final_edit_profile_username_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:textColor="#FFC107"
                android:textColorHighlight="#FFC107"
                android:textColorHint="@color/purple_200" />

            <TextView
                android:id="@+id/final_edit_profile_phone_number_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="PHONE NUMBER"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/final_edit_profile_phone_number_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:inputType="phone"
                android:textColor="#FFC107"
                android:textColorHighlight="#FFC107"
                android:textColorHint="@color/purple_200" />

            <TextView
                android:id="@+id/final_edit_profile_current_password_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="CURRENT PASSWORD"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/final_edit_profile_current_password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:inputType="textPassword"
                android:textColor="#FFC107"
                android:textColorHighlight="#FFC107"
                android:textColorHint="@color/purple_200" />

            <TextView
                android:id="@+id/final_edit_profile_new_password_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="NEW PASSWORD"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/final_edit_profile_new_password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:inputType="textPassword"
                android:textColor="#FFC107"
                android:textColorHighlight="#FFC107"
                android:textColorHint="@color/purple_200" />


            <Button
                android:id="@+id/final_edit_profile_accept_change_button"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginVertical="5dp"
                android:background="@color/teal_200"
                android:backgroundTint="@color/purple_500"
                android:backgroundTintMode="add"
                android:onClick="updateProfile"
                android:text="ACCEPT CHANGES"
                android:textColor="#FFEB3B" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>