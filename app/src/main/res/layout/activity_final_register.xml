<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    android:padding="12dp"
    tools:context=".final_register">

    <ImageView
        android:id="@+id/final_icon_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="final_app_logo"
        app:layout_constraintBottom_toTopOf="@+id/titleViewRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/final_logo_pic" />

    <TextView
        android:id="@+id/titleViewRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISITER NOW"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/final_scroll_view_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/final_icon_image_view" />

    <ScrollView
        android:id="@+id/final_scroll_view_register"
        android:layout_width="match_parent"
        android:layout_height="401dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleViewRegister">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/final_regis_first_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="FIRST NAME"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/final_regis_first_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="Enter your first name"
                android:paddingStart="10dp"
                android:paddingTop="18dp"
                android:paddingEnd="10dp"
                android:paddingBottom="18dp"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <TextView
                android:id="@+id/final_regis_last_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="LAST NAME"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/final_regis_last_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="Enter your last name"
                android:paddingStart="10dp"
                android:paddingTop="18dp"
                android:paddingEnd="10dp"
                android:paddingBottom="18dp"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <TextView
                android:id="@+id/final_regis_email_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="EMAIL"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/final_regis_email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="Enter your Email"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:paddingTop="18dp"
                android:paddingEnd="10dp"
                android:paddingBottom="18dp"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <TextView
                android:id="@+id/final_regis_username_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="USERNAME"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/final_regis_username_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="Enter your username"
                android:paddingStart="10dp"
                android:paddingTop="18dp"
                android:paddingEnd="10dp"
                android:paddingBottom="18dp"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <TextView
                android:id="@+id/final_regis_phone_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="PHONE"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/final_regis_phone_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="Enter your phone number"
                android:inputType="phone"
                android:paddingStart="10dp"
                android:paddingTop="18dp"
                android:paddingEnd="10dp"
                android:paddingBottom="18dp"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <TextView
                android:id="@+id/final_regis_password_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="PASSWORD"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/final_regis_password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="Enter your password"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:paddingTop="18dp"
                android:paddingEnd="10dp"
                android:paddingBottom="18dp"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <TextView
                android:id="@+id/final_regis_height_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="HEIGHT"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/final_regis_height_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="CM"
                android:inputType="numberDecimal"
                android:paddingStart="10dp"
                android:paddingTop="18dp"
                android:paddingEnd="10dp"
                android:paddingBottom="18dp"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF" />


            <TextView
                android:id="@+id/final_regis_weight_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="WEIGHT"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/final_regis_weight_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="LB"
                android:inputType="numberDecimal"
                android:paddingStart="10dp"
                android:paddingTop="18dp"
                android:paddingEnd="10dp"
                android:paddingBottom="18dp"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:backgroundTint="@color/purple_500"
                android:backgroundTintMode="add"
                android:onClick="register"
                android:text="REGISTER"
                android:textColor="#F8F6F6" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>